{% if article.header.gallery.show == 1 %}
    <div class="gallery">
      {% for image in article.media.images -%}
        <figure data-image="{{ image.resize(1920).url }}">
          {{ image.lightbox(1920).cropZoom(400,400).html('Sample Image') }}
        </figure>
      {% endfor %}
    </div>
{% endif  %}
