        <header>
          <h1>
{% if article.active %}
            {{ article.title }}
{% else %}
            <a href="{{ article.url }}">{{ article.title }}</a>
{% endif %}
          </h1>
{% if article.header.subtitle %}
          <h2>{{ article.header.subtitle }}</h2>
{% endif %}
          <time title="{{ article.date|date("Y-m-d") }}" datetime="{{ article.date|date("Y-m-d") }}">{{ article.date|date("M d Y") }}</time>
        </header>
